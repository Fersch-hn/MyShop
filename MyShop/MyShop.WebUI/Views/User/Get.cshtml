@model MyShop.Core.Models.Auth.ApplicationUser
@{
    List<MyShop.Core.Models.Auth.ApplicationRole> roles = new List<MyShop.Core.Models.Auth.ApplicationRole>();
    roles = ViewBag.Roles;

}

<h2>Hola</h2>

<div class="form-group">
    <label>Email</label>
    <input class="form-control" type="text" readonly value="@Model.Email" />
</div>

<hr />

@using (Html.BeginForm("AddRole", "User", FormMethod.Post))
{
    <div class="form-group">
        <input type="hidden" name="UserId" value="@Model.Id" />
        <select class="form-control" name="RoleId">
            @foreach (var r in roles)
            {
                <option value="@r.Id">@r.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-default">Add</button>
}